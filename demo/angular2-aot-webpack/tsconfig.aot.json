{
  "compilerOptions": {
    "baseUrl": "",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "rootDir": "./src/app",
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "entryModule": "src/app/modules/main.module#MainModule"
  },
 
  "exclude": [
    "node_modules",
    "dist",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "src/app/bootstrap*.ts",
    "src/app/polyfill.ts"
  ]
}
